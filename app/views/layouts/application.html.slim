doctype html
html
  head
    title Blog
    meta name="description" content= (content_for?(:description) ? yield(:description) : "Go to my blog. It is interesting")
    meta name="keywords" content= (content_for?(:keywords) ? yield(:keywords) : "Best blog, information, interests")
    = csrf_meta_tags
    = csp_meta_tag
    //= stylesheet_link_tag    'application', 'home', media: 'all'
    //= javascript_include_tag 'application'
    
    = stylesheet_pack_tag 'application'
    = javascript_pack_tag 'application'

    = javascript_pack_tag params[:controller].gsub(/devise.*/, "users")
    = stylesheet_pack_tag params[:controller].gsub(/devise.*/, "users")

  body
    = render "layouts/header"
    .container-fluid
      = yield
    div id="footer"

